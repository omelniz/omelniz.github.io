<section class="intro">
  {% include "../common/header.twig" %}
  <div class="intro__inner">
    <h1 class="intro__title">
      {{ intro.title }}
    </h1>
    <div id="about" class="intro__content">
      <div class="intro__offer">
        {% for item in intro.offer %}
          <p>{{ item }}</p>
        {% endfor %}
      </div>
      <div class="intro__main">
        <div class="intro__why">
          <h2>{{ intro.why.title }}</h2>
          <p>{{ intro.why.desc }}</p>
        </div>
        <div class="intro__clients">
          <h2>{{ intro.clients.title }}</h2>
          <ul>
            {% for item in intro.clients.list %}
              <li>
                <a href="{{ item.src }}">
                  <img alt="{{ item.title }}" src="{{ item.logo }}">
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div id="intro-animation"></div>
</section>